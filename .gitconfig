[user]
  email = jonny@jloughlin.dev
  name = Jonny Loughlin

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  line-numbers = true
  side-by-side = true
  true-color = always

[alias]
  cm = commit
  st = status
  br = branch
  hist = log --graph --oneline --color
  df = diff

[merge]
  conflictstyle = zdiff3
